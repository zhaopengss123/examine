.tab-head{
  height: 130rpx;
  padding: 0 75rpx;
  background: #f3f3f3;
  position: relative;
    border-top: solid 1rpx #dadadb;
  border-bottom: solid 1rpx #dadadb; 

}
.tab-left{
  width: 75rpx;
  height: 130rpx;
  background: rgb(241, 241, 241) url(https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/store/icon-left.png) no-repeat center center;
  background-size: 19rpx 34rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 9;
}
.tab-left.active1{
  background: rgb(241, 241, 241) url(https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/store/icon-left-o.png) no-repeat center center;
  background-size: 19rpx 34rpx;
}
.tab-right.active1{
  background: rgb(241, 241, 241) url(https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/store/icon-right-o.png) no-repeat center center;
  background-size: 19rpx 34rpx;
}
.tab-right{
  width: 75rpx;
  height: 130rpx;
  background: rgb(241, 241, 241) url(https://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/store/icon-right.png) no-repeat center center;
  background-size: 19rpx 34rpx;
  position: absolute;
  top: 0;
  right: 0;
  z-index: 9;
}

.tab-head-box{
  width: 100%;
}
.tab-content{
  white-space:nowrap;
 
}
.tab-item{
  display: inline-block;
  height: 130rpx;
  width: 25%;
  padding-top: 28rpx;
  text-align: center;
  box-sizing: border-box;
  position: relative;
}
.tab-item.active{
  color: #fff;
  background: -webkit-gradient(linear, 0 0, right bottom, from(#FF998E), to(#FB6180));
}
.tab-item.active .item-h6{
  color: #fff;
}
.tab-item.active::after{
  content: '';
  display: block;
  width: 0;
  height: 0;
  border-top: solid 10px rgb(252, 111, 132); 
  border-right: solid 8px rgba(252, 111, 132,0); 
  border-bottom: solid 8px rgba(252, 111, 132,0); 
  border-left: solid 8px rgba(252, 111, 132,0); 
  position: absolute;
  bottom: 0;
  left: 50%;
  margin-bottom: -18px; 
  margin-left: -5px;
}
.item-h2{
  font-size: 28rpx;
  line-height: 28rpx;
  padding-bottom: 22rpx;
}
.item-h6{
  color: rgb(145, 145, 145);

  line-height: 28rpx;
  font-size:28rpx;
}


.tab-body{
  padding: 40rpx 35rpx;
  background: #fff;
  overflow: hidden;
  box-shadow: 0 4rpx 6rpx #eee;
}
.body-item{
  float: left;
  width: 31.3333333%;
  height: 82rpx;
  color: #333;
  font-size: 28rpx;
  line-height: 80rpx;
  text-align: center;
  margin-bottom: 22rpx;
  border-radius: 10rpx;
  border: solid 1rpx #606060;
  box-sizing: border-box;
}
.body-item.active{
  background: url(http://ylbb-wxapp.oss-cn-beijing.aliyuncs.com/store/icon-selected.png) no-repeat right top;
  background-size: 40rpx;
  border: solid 1rpx #ff839a;

}
.body-item.disabled{
  color: #ccc;
  background: #f3f3f3;
  border: solid 1rpx rgb(241, 241, 241);
}
.body-item:not(:nth-child(3n)){
  margin-right: 3%;
}
