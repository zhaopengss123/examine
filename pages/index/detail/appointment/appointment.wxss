/****************活动********************/
.activity-content{
  background: #fff;
  margin: 20rpx 0;
  width: 95%;
  padding: 0 2.5%;
  
}
.activity{
  margin-bottom: 20rpx;
  background: #fff;
  padding: 0 30rpx;
}
