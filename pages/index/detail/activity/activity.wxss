
.header{
  padding: 0 30rpx 33rpx;
  background: #fff;
  position: relative;

  border-bottom: solid 20rpx rgb(240, 240, 240);
}
.head-title{
  padding: 42rpx 100rpx 19rpx 0;
  font-size: 28rpx;
  line-height: 28rpx;
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.head-detail{
  color: RGBA(153, 153, 153, 1);
  font-size: 24rpx;
  line-height: 24rpx;
}
.head-cover{
  background: #999;
  height: 366rpx;
  overflow: hidden;

}
.head-cover image{
  width: 750rpx;
  height: 366rpx;
}
.head-price{
  padding-top: 30rpx;
  overflow: hidden;
}
.head-price view{
  float: left;
}
.head-price view:first-child{
  font-size: 36rpx;
  line-height: 36rpx;
  margin-right: 26rpx;
}
.head-price view:last-child{
  height: 36rpx;
  color: RGBA(51, 51, 51, 1);
  font-size: 24rpx;
  line-height: 46rpx;
  text-decoration: line-through;
}
.head-label{
  padding: 0 14rpx;
  color: #fff;
  font-size: 22rpx;
  line-height: 44rpx;
  border-radius: 8rpx;
  background: RGBA(244, 69, 60, 1);
  position: absolute;
  top: 40rpx;
  right: 45rpx;
} 

.detail{
  padding: 0 30rpx;
  background: #fff;
}
.detail-title{
  padding: 40rpx 0 30rpx;
  font-size: 32rpx;
  line-height: 32rpx;
  border-bottom: solid 1px rgba(238,238,238,1);
}
.detail-content{
  padding-top: 17rpx;
  padding-bottom: 100rpx;
}
.detail-item{
  color: #63686e;
  font-size: 26rpx;
  line-height: 60rpx;
  overflow: hidden;
}
.item-label{
  float: left;
  width: 130rpx;
}

.footer{
  width: 100%;
  position: fixed;
  bottom: 0;
}
.btn-info{
  height: 100rpx;
  color: #63686e;
  font-size: 26rpx;
  line-height: 100rpx;
  text-indent: 70rpx;
  border-top: solid 1px RGBA(238, 238, 238, 1);
  box-sizing: border-box;
  background: #fff;
}
.footer-btn{
  width: 240rpx;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  text-align: center;
  background: RGBA(255, 131, 154, 1);
  position: absolute;
  right: 0;
  bottom: 0;
  z-index: 9;
}
.footer-btn.active{
  background: #fba0b1;
}