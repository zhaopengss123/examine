page{
  background: #F0F0F0;
}

.header{
  padding: 40rpx 35rpx;
  margin: 20rpx 0;
  background: #fff;
}

.head{
  font-size: 32rpx;
  line-height: 32rpx;
  padding-bottom: 35rpx;
  margin-bottom: 25rpx;
  border-bottom: solid 1px #eee;
}
.head-title{
  padding-bottom: 20rpx;
}
.head-desc{
  color: #999;
  font-size: 24rpx;
  line-height: 24rpx;
}

.detail-image{
  float: left;
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
}
.detail-image image{
  width: 100%;
  border-radius: 10rpx;
}

.content{
  padding-left: 155rpx;
}
.content-h2{
  padding: 10rpx 0;
  color: #333;
  font-size: 28rpx;
  line-height: 28rpx;
}
.content-h6{
  color: #999;
  font-size: 24rpx;
  line-height: 34rpx;
}

.appointment{
  height: 32rpx;
  padding: 35rpx;
  margin-bottom: 20rpx;
  background: #fff;
}
.appointment > view{
  float: left;
  font-size: 32rpx;
  line-height: 32rpx;
}
.appointment > text{
  float: right;
  color: #999;
  font-size: 24rpx;
  line-height: 32rpx;
}

.payment{
  padding: 40rpx 35rpx;
  background: #fff;
}

.radio-group{
  height: 80rpx;
  position: relative;
}

.item-image{
  float: left;
  width: 80rpx;
  height: 80rpx;
  overflow: hidden;
}
.item-image image{
  width: 100%;
}
.item-h2{
  padding: 8rpx 0 16rpx;
  color: 3333;
  font-size: 28rpx;
  line-height: 28rpx;
  padding-left: 100rpx;
}
.item-h6{
  color: #999;
  font-size: 24rpx;
  line-height: 24rpx;
  padding-left: 100rpx;
}
.item-radio{
  position: absolute;
  top: 50%;
  right: 0;
  margin-top: -30rpx;
}

.footer{
  width: 100%;
  height: 100rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
}
.price{
  display: block;
  padding-left: 35rpx;
  color: #494949;
  font-size: 26rpx;
  line-height: 100rpx;
}
.price text{
  font-size: 32rpx;
}
.button{
  padding: 0 35rpx;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  background: #FF839A;
  position: absolute;
  top: 0;
  right: 0;
}
.button.active{
  opacity: .8;
}