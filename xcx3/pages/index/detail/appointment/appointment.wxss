page{
  background: #F0F0F0;
}


.header{
  margin: 20rpx 0;
  padding: 40rpx 0;
  overflow: hidden;
  background: #fff;
}
.header > view {
  float: left;
  width: 33.33333%;
  text-align: center;
  box-sizing: border-box;
}
.header > view:not(:last-child){
  border-right: solid 1px #f5f5f5;
}
.header > view > text:first-child{
  display: block;
  padding-bottom: 17rpx;
  color: #FF9700;
  font-size: 36rpx;
  line-height: 36rpx;
}
.header > view > text:last-child{
  display: block;
  color: #4D4D4D;
  font-size: 24rpx;
  line-height: 24rpx;
}

.select-teacher{
  padding: 0 30rpx 38rpx;
  margin: 20rpx 0 120rpx;
  background: #fff;
}
.select-head{
  border-bottom:solid 1px rgb(232, 232, 232);
}
.select-title{
  padding: 32rpx 0 15rpx;
  font-size: 32rpx;
  line-height: 1;
}
.select-desc{
  padding-bottom: 33rpx;
  color: #999;
  font-size: 24rpx;
  line-height: 1;
}

.teacher-content label{
  display: block;
  width: 100%;
  height: 140rpx;
  padding-left: 92rpx;
  margin-top: 25rpx;
  border: solid 1px #F1F1F1;
  border-radius: 10rpx;
  box-sizing: border-box;
}
.teacher-content label.active{
  border-color: #FF839A;
}
.teacher-head{
  float: left;
  width: 95rpx;
  height: 95rpx;
  margin-top: 22.5rpx;
  margin-right: 25rpx;
  line-height: 1;
}
.teacher-head image{
  width: 100%;
}
.teacher-name{
  float: left;
  font-size: 32rpx;
  line-height: 138rpx;
}