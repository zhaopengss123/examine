<!-- 门店列表 -->

<view class='list-box'>

 <view class='city' >
      <text class="picker">{{address[1]}}</text>
      <view class='icon-slide'></view>
  </view>

<view class='list-po'>
   <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{value}}" bindchange="bindChange">
    <picker-view-column>
      <view wx:for="{{years}}" style="line-height: 50px; padding-left:200rpx; fon-size:20rpx;">{{item}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{months}}" style="line-height: 50px; padding-left:100rpx; ">{{item}}   </view>
    </picker-view-column>
  </picker-view>
</view>


  <view class='swiper'>
    <swiper indicator-dots="true" autoplay="true" interval="3000" duration="300">
      <block wx:for="{{swiperArray}}">
        <swiper-item>
          <image src="{{item}}" class="slide-image" width="355" height="150"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='header'>
    <view class='head-title'>附近门店</view>
    <view class='head-desc'>为您精选的附近门店</view>
  </view>

  <view class='item-container'>
    <view class='no-data' hidden="{{storeItems.length || requestLoading}}">您的附近没有合适的门店</view>
    <view class='item' wx:for="{{storeItems}}" wx:key="id">
      <navigator url="/pages/index/detail/detail?shopId={{item.id}}" hover-class="navigator-hover">
        <view class='item-image'><image src='{{item.coverImag}}' mode='widthFix'></image></view>
        <view class='item-card'>全国通卡店</view>
        <view class='item-title'>
          <view>{{item.shopName}}<view class='item-icon' wx:if="{{item.visitStatus}}">最近使用</view></view>
        </view>
        <view class='item-address'>
          <view>{{item.address}}</view>
          <text>{{item.distance}}</text>
        </view>
      </navigator>
    </view>
  </view>


</view>
