page{
  background: #F0F0F0;
}

.apply-info,
.store-info{
  padding: 0 35rpx;
  margin: 20rpx 0;
  background: #fff;
}
.apply-title{
  padding: 40rpx 0 20rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  border-bottom: solid 1px #f0f0f0;
  overflow: hidden;
  position: relative;
}
.apply-title view:first-child{
  float: left;
}
.apply-title view:last-child{
  float: right;
}
.apply-cell{
  padding-bottom: 16rpx;
}
.apply-cell-desc{
  color: #63686e;
  font-size: 26rpx;
  line-height: 26rpx;
  padding-bottom: 24rpx;
}

.store-info{
  padding-bottom: 26rpx;
}
.title-button{
  width: 80rpx;
  color: #FF839A;
  font-size: 22rpx;
  line-height: 33rpx;
  text-align: center;

  position: absolute;
  top: 50%;
  right: 0;
  z-index: 9;
  margin-top: -10rpx;
  transition: all .2s;
}
.title-button.active{
  color: #fff;
  background: #F38A03;
}
.store-item{
  padding-bottom: 8rpx;
  color: #63686e;
  font-size: 26rpx;
  line-height: 40rpx;
}


.footer{
  width: 100%;
  text-align: center;
  position: fixed;
  bottom: 50rpx;
}
.footer-phone{
   color: rgb(150, 150, 150);
  font-size: 26rpx;
  line-height: 36rpx;

}
.footer-time{
  color: rgb(150, 150, 150);
  font-size: 23rpx;
  line-height: 23rpx;
  padding-top: 15rpx;
}

.fixed-btns{
  width: 100%;
  position: fixed;
  bottom: 0;
  height: 100rpx;

}
.delete-btn{
  width: 200rpx;
  color: #63686e;
  font-size: 26rpx;
  line-height: 100rpx;
  text-align: center;
  background: #fff;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 9;
}
.delete-btn.active{
  background: #f5f5f5;
}

.reset-btn{
  padding-left: 200rpx;
  color: #fff;
  font-size: 34rpx;
  line-height: 100rpx;
  text-align: center;
  background: #FF839A;
  box-sizing: border-box;
}
.reset-btn.active{
  opacity: .8;
}